<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Solitaire" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SolitaireListStyle">
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">0.142</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SolitaireFoundationStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_constraintWidth_percent">0.25</item>
        <item name="android:text">empty</item>
    </style>

    <style name="SolitaireDialogStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/dialog_text_size</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="SolitaireDialogStyle.Text" parent="SolitaireDialogStyle">
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">@dimen/dialog_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/dialog_margin</item>
    </style>

    <style name="SolitaireDialogStyle.Button" parent="SolitaireDialogStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dialog_margin</item>
    </style>
</resources>